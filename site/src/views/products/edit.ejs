<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %>

    <main>
        <h1>Edita el producto <%= product.name %> </h1>
        <form action="/products/<%= product.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div>
                <label for="name">Nombre del producto:</label>
                <input type="text" id="name" name="name" placeholder="Ej: Zapatillas Reebok" value="<%= product.name %>">
            </div>
            <div>
                <label for="price">Precio del producto:</label>
                <input type="number" id="price" name="price" placeholder="Ej: 5678" value="<%= product.price %>">
            </div>
            <div>
                <label for="discount">Descuento:</label>
                <input type="number" id="discount" name="discount" placeholder="Ej: 15" value="<%= product.discount %>">
            </div>
            <div>
                <h3>Categoria del producto:</h3>
                <% let array  = ['Music', 'Kids', 'Computers', 'Home','Grosery','Health','Movies','Electronics','Shoes','Books','Toys','Industrial','Games','Jewelry','Beauty','Baby','Garden','Sports','Outdoors']; %> 
                <% for (let i of array) { %>
                    <% if (product.thematic == i) { %>
                        <p>
                            <input type="radio" name="thematic" value="<%= i %>" id="<%= i %>" selected>
                            <label for="<%= i %>"><%= i %></label>
                        </p>
                    <% } %>
                    <p>
                        <input type="radio" name="thematic" value="<%= i %>" id="<%= i %>">
                        <label for="<%= i %>"><%= i %></label>
                    </p>   
                <% } %> 
            </div>
            <div>
                <label for="keywords">Palabras clave:</label>
                <% let x = ''; %>
                <% for (let i in product.keywords) { %>
                    <% x += i  + ', '; %> 
                <% } %>   
                <input type="text" id="keywords" name="keywords" value="<%= x %>">
            </div>
            <div>
                <label for="description">Descipci√≥n:</label>
                <textarea name="description" id="description" placeholder="Eg: Bonitos zapatos" value="<%= product.description %>"></textarea>
            </div>
            <div>
                <label for="prodImg">Imagen del producto:</label>
                <input type="file" name="prodImg" id="prodImg" accept=".jpg, .png, .jpeg, .bmp, .tiff, .tif|image/*" value="<%= product.image %>">
            </div>
            <div>
                <button type="submit">Guardar</button>
            </div>
        </form>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>