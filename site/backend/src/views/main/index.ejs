<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head', {title: "LaniakShop"}) %>
<body>
    <%- include('../partials/header') %>

    <div class="container">
        <div class="video">
            <div class="overlay">
                <div class="contenedor contenido-video">
                    <h2>
                        Las mejores ofertas
                        <span>Ubicados en:  CDMX</span>
                    </h2>
                </div>
            </div>
            <img src="/images/min/stills/setup_still.jpg" alt="image banner">
        </div>
        
        <section class="sect-p">
            <div class="sect-title sectionTitle">
                <h2>Productos mas vendidos!</h2>
            </div>
            <div class="sect-content">
                <% for ( let product of products ) { %>
                    <article class="prods">
                        <div class="prodBox">
                            <a href="/products/<%= product.id %>">
                                <div class="img-container">
                                <div class="img-inner">
                                    <div class="inner-skew">
                                    <img loading="lazy" src="/images/min/products/<%= product.image %>" onerror="this.onerror=null; this.src='/images/min/products/default.jpg'" alt="imagen de <%= product.name %>">
                                    </div>
                                </div>
                                </div>
                                <div class="text-container">
                                <h3>$<%= product.price %></h3>
                                <div>
                                    <%= product.name %>
                                </div>
                            </a>
                        </div>
                    </article>
                <% } %> 
            </div>
        </section>
    </div>

    <%- include('../partials/footer') %>
</body>
</html>